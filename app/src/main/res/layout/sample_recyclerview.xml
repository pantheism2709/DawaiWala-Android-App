<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/democard"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:layout_margin="10dp"
    android:background="#2196F3"
    android:backgroundTint="#13EAD5"
    android:elevation="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/sample"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/med1"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:background="#D52D2D"
            android:backgroundTint="#BC5C5C"
            android:backgroundTintMode="add"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/ic_medicines_icon" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="40dp"
            android:text="@string/price_500"
            android:textColor="#121111"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/medName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="13dp"
        android:text="@string/paracitamol"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addToCard"
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:text="Add To cart "
        android:textSize="10dp"
        android:backgroundTint="@color/btncolor"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/medName1"
        app:layout_constraintTop_toBottomOf="@+id/sample"
        app:layout_constraintVertical_bias="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>